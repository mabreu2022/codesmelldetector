unit uRelatorioJSON;

interface

uses
  System.JSON;

procedure SalvarRelatorioJSON(const JsonArray: TJSONArray; const FileName: string = 'resultado.json');

implementation

uses
  System.Classes;

procedure SalvarRelatorioJSON(const JsonArray: TJSONArray; const FileName: string);
var
  JsonStr: TStringList;
begin
  JsonStr := TStringList.Create;
  try
    JsonStr.Text := JsonArray.ToJSON;
    JsonStr.SaveToFile(FileName);
  finally
    JsonStr.Free;
  end;
end;

end.
